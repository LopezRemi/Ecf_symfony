<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css">


{% block body %}

	<style>
		.bg {
			background-image: url('../images/login.jpg');
		}
		.fontText {
			font-family: 'Kaushan Script', cursive;
		}
		.wrapper {
			margin: auto;
			max-width: 80%;
			height: 90vh;
			width: 95%;
			font: 22px / 1.5 sans-serif;
			padding-top: 200px;
			
		}
		.fontLogin {
			font-family: 'Great Vibes', cursive;
			font-size : 300%
		}
	</style>

</head>

<body class="bg">

	<div class="wrapper d-flex flex-column align-items-center justify-content-center mt-5">

		{% if error %}
			<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		
		<h1 class="fontLogin text-center mb-5">Bienvenue sur l'application des bibliothécaires</h1>

		<form class="d-flex flex-column justify-content-center fontText" action="{{ path('login') }}" method="post">


			<div class='mb-3 d-flex justify-content-between'>
				<label class='me-2' for="username">Identifiant :</label>
				<input type="text" id="username" name="_username" value="{{ last_username }}"/>
			</div>
			<div class='mb-3 d-flex justify-content-between'>
				<label class='me-2' for="password">Mot de passe :</label>
				<input type="password" id="password" name="_password"/>
			</div>
			{# If you want to control the URL the user is redirected to on success
												        <input type="hidden" name="_target_path" value="/account"/> #}

			<button class='btn btn-dark' type="submit">Se connecter</button>
		</form>
	</div>


{% endblock %}
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
