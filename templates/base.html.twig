<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		<link
		href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>
		{% for message in app.flashes('success') %}
			<div class="alert alert-success">
				<h3 class="d-flex justify-content-center">{{message}}</h3>
			</div>
		{% endfor %}

		{% for message in app.flashes('danger') %}
			<div class="alert alert-danger">
				<h3 class="d-flex justify-content-center">{{message}}</h3>
			</div>
		{% endfor %}
		<nav class="navbar sticky-top navbar-light" style="background-color: #20c997;">
			<div class="container-fluid d-flex justify-content-around">
				<a class="navbar-brand" style="color: #dc3545; font-weight: bolder;" href="{{ path('accueil' )}}">Accueil</a>
				<a class="navbar-brand" style="color: #dc3545; font-weight: bolder;" href="{{ path('books_listing' )}}">Liste des livres</a>
				<a class="navbar-brand" style="color: #dc3545; font-weight: bolder;" href="{{ path('users_listing' )}}">Liste des emprunteurs</a>
				<a class="navbar-brand" style="color: #dc3545; font-weight: bolder;" href="{{ path('book_create' )}}">Ajouter un livre</a>
				<a class="navbar-brand" style="color: #dc3545; font-weight: bolder;" href="{{ path('user_create' )}}">Ajouter un emprunteur</a>
			</div>
		</nav>

		{% block body %}{% endblock %}
	</body>
</html>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
